<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.account.AccountFragment">

        <include
            android:id="@+id/include_account_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_account_detail"/>

        <include
            android:id="@+id/include_my_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            layout="@layout/include_account_my_purchase"/>

        <include
            android:id="@+id/include_account_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            layout="@layout/include_account_setting"/>
    </LinearLayout>

</ScrollView>